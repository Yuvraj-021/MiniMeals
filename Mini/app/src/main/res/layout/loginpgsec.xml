<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#D50000">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="204dp"
            android:layout_marginEnd="142dp"
            android:fontFamily="@font/lobster_regular"
            android:text="MiniMeals"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="117dp"
            android:layout_marginEnd="175dp"
            app:srcCompat="@drawable/foodserve" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="362dp"
        android:background="@drawable/whitetext">

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="352dp"
            android:background="@drawable/text_corner"
            android:backgroundTint="#00AD3333"
            android:backgroundTintMode="src_over"
            android:drawableStart="@drawable/mail"
            android:elevation="10dp"
            android:ems="10"
            android:fontFamily="@font/merriweather"
            android:hint="Email"
            android:inputType="textPersonName"
            android:textColor="#FD0B0A0A"
            android:textColorHint="#F8050505" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="281dp"
            android:background="@drawable/text_corner"
            android:backgroundTintMode="src_over"
            android:drawableStart="@drawable/key"
            android:elevation="10dp"
            android:ems="10"
            android:fontFamily="@font/merriweather"
            android:hint=" Password"
            android:inputType="textPersonName"
            android:password="true"
            android:textColor="#FD0E0E0E"
            android:textColorHint="#F8070707"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="108dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="201dp"
            android:background="@drawable/roundbtn"
            android:fontFamily="@font/merriweather"
            android:text="Login"
            android:textColor="#FDFDFD"
            android:textColorLink="#F3EE0505"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="137dp"
            android:layout_toStartOf="@+id/textView10"
            android:fontFamily="@font/merriweather"
            android:text="Don't Have An Account ? "
            android:textColor="#0C0C0C"
            android:textColorHighlight="#BD6120"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="134dp"
            android:fontFamily="@font/lobster_regular"
            android:text="Register !!"
            android:textColor="#F60C0C"
            android:textSize="24sp"
            android:textStyle="normal" />

    </RelativeLayout>

</RelativeLayout>