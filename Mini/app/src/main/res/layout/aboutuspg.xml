<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="282dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/userabout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"/>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="362dp"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="450dp"
        android:fontFamily="@font/lobster_regular"
        android:text="We're dedicated for providing you some of the delicious dishes at negligible rates .  We hope you enjoy  ordering on  our app as much as we enjoy offering them to you. If you have any questions or comments, please don't hesitate to contact us. "
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/lobster_regular"
        android:text="Welcome to Mini Meals"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="600dp"
        android:fontFamily="@font/lobster_regular"
        android:singleLine="false"
        android:text="Regards"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="630dp"
        android:fontFamily="@font/lobster_regular"
        android:singleLine="false"
        android:text="Team MiniMeals"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_primary"
        android:textSize="18sp" />

</FrameLayout>