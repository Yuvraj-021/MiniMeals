<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profileBackground">

    <EditText
        android:id="@+id/editText4"
        android:layout_width="340dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="268dp"
        android:background="@drawable/text_corner"
        android:backgroundTint="#00AD3333"
        android:backgroundTintMode="src_over"
        android:ems="10"
        android:fontFamily="@font/fonts"
        android:hint="     Email :"
        android:inputType="textPersonName"
        android:textColor="#FDFFFFFF"
        android:textColorHint="#F8FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/text_corner"
        android:backgroundTintMode="src_over"
        android:ems="10"
        android:fontFamily="@font/fonts"
        android:hint="     Password :"
        android:inputType="textPersonName"
        android:textColor="#FDFFFFFF"
        android:textColorHint="#F8FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="125dp"
        android:background="@drawable/button_lr"
        android:fontFamily="@font/pacifico_regular"
        android:text="Login"
        android:textColor="#FDFDFD"
        android:textColorLink="#F3EE0505"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="387dp"
        android:fontFamily="@font/pacifico_regular"
        android:foregroundTint="#00722E2E"
        android:gravity="center"
        android:text="Mini Meals"
        android:textAlignment="center"
        android:textColor="#F30404"
        android:textSize="36sp"
        app:fontFamily="@font/pacifico_regular" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="323dp"
        android:fontFamily="@font/pacifico_regular"
        android:gravity="center"
        android:text="Welcomes you!"
        android:textColor="#59288B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="55dp"
        android:layout_toStartOf="@+id/textView10"
        android:fontFamily="@font/pacifico_regular"
        android:text="Don't Have An Account ? "
        android:textColor="#006064"
        android:textColorHighlight="#BD6120"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="54dp"
        android:fontFamily="@font/pacifico_regular"
        android:text="Register !!"
        android:textColor="#0D84E2"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="283dp"
        app:srcCompat="@drawable/addmen" />


</RelativeLayout>